@model ABCShoppingMall.Models.Ticket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_UserTicket.cshtml";
}

<div class="">
    <h3 class="text-center my-3 fw-bolder">Book Movie Ticket</h3>
    <hr />
</div>
<div class="container w-50">
    <div class="row">
        <div class="col-md-5">
            <img src="~/Hexashop/assets/images/ticket2.jpg" height="100%" width="250px" style="border-radius:10px" alt="Banner Image" />
        </div>
        <div class="col-md-7 pl-5">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="">
                    <div class="">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label">Movie Name</label>
                            @Html.DropDownList("MovieId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MovieId, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>Name</label>
                            @Html.EditorFor(model => model.CardDetails, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CardDetails, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                @Html.EditorFor(model => model.IsBooked, new { htmlAttributes = new { @class = "form-check-input", id = "IsBooked" } })
                                @Html.LabelFor(model => model.IsBooked, htmlAttributes: new { @class = "form-check-label", @for = "IsBooked" })
                                @Html.ValidationMessageFor(model => model.IsBooked, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <div class="text-right">
                        <input type="submit" value="Book" class="btn btn-dark" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
