@model IEnumerable<ABCShoppingMall.Models.Feedback>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_FeedbackUserLayout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .success-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .success-card {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

        .success-card i {
            font-size: 3rem;
            color: #28a745;
            margin-bottom: 1rem;
        }

        .success-card h2 {
            color: #28a745;
            margin-bottom: 1rem;
        }

        .success-card p {
            font-size: 1.1rem;
            color: #6c757d;
            margin-bottom: 2rem;
        }

        .success-card .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .success-card a {
            display: inline-block;
            padding: 0.5rem 1rem;
            color: white;
            background-color: #007bff;
            border-radius: 5px;
            text-decoration: none;
        }

            .success-card a:hover {
                background-color: #0056b3;
            }
</style>
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <i class="fa fa-check-circle"></i>
            <h2>Feedback Successfully Sent</h2>
            <p>Thank you for your feedback. We appreciate your input!</p>
            <a href="@Url.Action("Create", "FeedbackUser")">Back to Feedback</a>
        </div>
    </div>
